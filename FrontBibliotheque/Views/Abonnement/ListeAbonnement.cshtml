        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border: 2px solid #e0e0e0 !important;
        border-radius: 12px !important;
        padding: 0.8rem !important;
        transition: all 0.3s ease !important;
        background: #f9f9f9 !important;
    }

    .form-control:focus, .form-select:focus {
        border-color: #667eea !important;
        background: white !important;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1) !important;
    }

    .modal-footer {
        border: none !important;
        padding: 1.5rem 2rem !important;
    }

    .btn-secondary {
        border-radius: 12px !important;
        padding: 0.7rem 1.5rem !important;
        font-weight: 600 !important;
        transition: all 0.3s ease !important;
    }

    .btn-secondary:hover {
        background: #5a6268 !important;
        transform: translateY(-2px);
    }

    .btn-success {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none !important;
        border-radius: 12px !important;
        padding: 0.7rem 1.5rem !important;
        font-weight: 600 !important;
        transition: all 0.3s ease !important;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3) !important;
    }

    .btn-success:hover {
        transform: translateY(-2px) !important;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4) !important;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
        <h2>üì¶ Mes abonnements</h2>

        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#abonnementModal">
            ‚ûï S'abonner
        </button>
    </div>

    <div class="card mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Date paiement (d√©but)</label>
                <input type="date" class="form-control" id="dateDebut">
            </div>

            <div class="col-md-4">
                <label class="form-label">Date paiement (fin)</label>
                <input type="date" class="form-control" id="dateFin">
            </div>

            <div class="col-md-4">
                <button class="btn btn-secondary w-100" onclick="appliquerFiltre()">
                    üîç Filtrer
                </button>
            </div>
        </div>
    </div>
</div>


    <div class="table-container">
        <table class="table table-bordered table-striped" id="tableAbonnement">
            <thead class="table-dark">
                <tr>
                    <th>Date paiement</th>
                    <th>Date expiration</th>
                    <th>Mode paiement</th>
                    <th>Type abonnement</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4" class="text-center">Chargement...</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="abonnementModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Nouvel abonnement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Date de paiement</label>
                    <input type="date" class="form-control" id="datePaiement">
                </div>

                <div class="mb-3">
                    <label class="form-label">Type d'abonnement</label>
                    <select class="form-select" id="typeAbonnementSelect">
                        <option value="">-- S√©lectionner --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mode de paiement</label>
                    <select class="form-select" id="modePaiementSelect">
                        <option value="">-- S√©lectionner --</option>
                    </select>
                </div>

                <div id="msgAbonnement" class="text-center"></div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button class="btn btn-success" onclick="ajouterAbonnement()">Valider</button>
            </div>

        </div>
    </div>
</div>
<script>
let abonnements = [];

document.addEventListener("DOMContentLoaded", () => {

    fetch('/api/abonnement/listeAbonnement')
        .then(res => {
            if (!res.ok) throw new Error("Non autoris√© ou erreur serveur");
            return res.json();
        })
        .then(data => {
            abonnements = data;
            afficherTable(abonnements);
        })
        .catch(err => afficherErreur(err.message));
});

function afficherTable(data) {
    const tbody = document.querySelector("#tableAbonnement tbody");
    tbody.innerHTML = "";

    if (!data || data.length === 0) {
        tbody.innerHTML = `
            <tr>
                <td colspan="4" class="text-center">
                    Aucun abonnement trouv√©
                </td>
            </tr>`;
        return;
    }

    data.forEach(item => {
        tbody.insertAdjacentHTML("beforeend", `
            <tr>
                <td>${formatDate(item.date_paiement)}</td>
                <td>${formatDate(item.date_expiration)}</td>
                <td>${item.mode}</td>
                <td>${item.type_abonnement}</td>
            </tr>
        `);
    });
}

function appliquerFiltre() {
    const debut = document.getElementById("dateDebut").value;
    const fin = document.getElementById("dateFin").value;

    if (!debut && !fin) {
        afficherTable(abonnements);
        return;
    }

    const dateDebut = debut ? new Date(debut) : null;
    const dateFin = fin ? new Date(fin) : null;

    const resultat = abonnements.filter(item => {
        const datePaiement = new Date(item.date_paiement);

        if (dateDebut && datePaiement < dateDebut) return false;
        if (dateFin && datePaiement > dateFin) return false;

        return true;
    });

    afficherTable(resultat);
}

function formatDate(dateString) {
    if (!dateString) return "";

    const date = new Date(dateString);
    let formatted = date.toLocaleDateString('fr-FR', {
        day: '2-digit',
        month: 'long',
        year: 'numeric'
    });

    return formatted.charAt(0).toUpperCase() + formatted.slice(1);
}

function afficherErreur(message) {
    document.querySelector("#tableAbonnement tbody").innerHTML = `
        <tr>
            <td colspan="4" class="text-danger text-center">
                ${message}
            </td>
        </tr>`;
}
</script>


<script>
document.addEventListener("DOMContentLoaded", () => {
    chargerTypeAbonnement();
    chargerModePaiement();
});

function chargerTypeAbonnement() {
    fetch('/api/abonnement/typeAbonnement')
        .then(res => res.json())
        .then(data => {
            const select = document.getElementById("typeAbonnementSelect");
            data.forEach(item => {
                select.innerHTML += `<option value="${item.id}">${item.type_abonnement}</option>`;
            });
        });
}

function chargerModePaiement() {
    fetch('/api/abonnement/modePaiement')
        .then(res => res.json())
        .then(data => {
            const select = document.getElementById("modePaiementSelect");
            data.forEach(item => {
                select.innerHTML += `<option value="${item.id}">${item.mode}</option>`;
            });
        });
}
</script>

<script>
function ajouterAbonnement() {
    const datePaiement = document.getElementById("datePaiement").value;
    const typeAbonnement = document.getElementById("typeAbonnementSelect").value;
    const modePaiement = document.getElementById("modePaiementSelect").value;
    const msg = document.getElementById("msgAbonnement");

    if (!datePaiement || !typeAbonnement || !modePaiement) {
        msg.innerHTML = `<span class="text-danger">Tous les champs sont obligatoires</span>`;
        return;
    }

    const payload = {
        date_paiement: datePaiement,
        id_typeabonnement: parseInt(typeAbonnement),
        id_modepaiement: parseInt(modePaiement)
    };

    fetch('/api/abonnement/ajoutAbonnement', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
    })
    .then(res => res.json())
    .then(data => {
        if (data.status === 1) {
            msg.innerHTML = `<span class="text-warning">${data.message}</span>`;
        } else {
            msg.innerHTML = `<span class="text-success">${data.message}</span>`;
            setTimeout(() => location.reload(), 1200);
        }
    })
    .catch(() => {
        msg.innerHTML = `<span class="text-danger">Erreur serveur</span>`;
    });
}
</script>